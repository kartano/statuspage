{
    "name": "kartano/statuspage",
    "description": "Generic Statuspage processpr",
    "version": "1.0.0",
    "type": "library",
    "authors": [
        {
            "name": "Simon Mitchell",
            "email": "kartano@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.4",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-ldap": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-curl": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kartano\\Statuspage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KartanoTest\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -sp",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyze --memory-limit=1G",
        "stan-debug": "phpstan analyze --debug --memory-limit=1G",
        "stan-clear": "phpstan clear-result-cache",
        "test": "phpunit"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
